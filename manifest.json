{
    "manifest_version": 3,
    "name": "스파게티",
    "description": "엔트리 이야기에서 이미지를 쉽게 공유하고 보며, 영상 및 음원을 쉽게 볼 수 해줍니다.",
    "version": "0.0.9",
    "icons": { "512": "1f35d.png" },
    "web_accessible_resources": [
        {
            "resources": ["blockImage.png", "done.png"],
            "matches": ["https://*.playentry.org/*"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["https://*.playentry.org/*"],
